<div class="body-container">
	<div id="pageContent" class="container" style="margin-top: 40px">
		<div class="span-8">
			<input id="latitude_hid" type="hidden" value="<%= @Latitude %>"/>
			<input id="longitude_hid" type="hidden" value="<%= @Longitude %>"/>
			<h1><%= @Name %></h1>
			<h6><%= @Tags %></h6>
			<hr class="space"/>
			<div class="RestaurantImageView">
				<ul class="imglist">
					<% @Images.each do |img| %>
						<li class="imgthumbnail"><a href="<%= img %>" data-lightbox="restaurantImg"/><img src="<%= img %>" width="40px" height="40px"/></a></li>
					<% end %>
				</ul>
			</div>
			<div id="<%= @Name %>" data-corner="bevel tl cc:#fff 20px keep"class="restaurantDetailPromoBox">
				<div class="restaurantDetailsPromotionContent">
					<label class="DetailCaption">VIPbiteDEAL:</label>
					<label class="Promotion"><%= @Deal %></label>
					<br/>
					<p class="promotionDetail"><%= @Deal %></p>
					<br/>
					<a id = "RestaurantTweetButton" class="twitterpopup" href="https://twitter.com/share?url=<%= request.original_url%>&text=TWEET DEAL FROM VIPBITE&via=VIPbite&tw_p=tweetbutton">
						<h5 style="line-height: 1px;"><img src="/Image/Shared/whiteTwitter.png" width="10px;" heihgt="10px;" style="vertical-align: middle"/>
							<label>TWEET THIS DEAL</label>
						</h5>
					</a>
				</div>
			</div>
			<div class="restaurantDetailList">
				<table style="height: 200px;">
					<tr>
						<th class="Caption">RESERVATION:</th>
						<%if(@Reservation.include?'http://')%>
							<td style="line-height: 1.0"><a href="<%= @Reservation%>"  target="_blank">Please Click here For Information</a></td>
						<%else%>
							<td style="line-height: 1.0"><%= @Reservation %></td>
						<%end%>
					</tr>
					<tr>
						<th class="Caption">PHONE:</th>
						<td style="line-height: 1.0"><%= @Phone %></td>
					</tr>
					<tr>
						<th class="Caption">HOURS:</th>
						<%if(@Hours.include?'http://')%>
							<td style="line-height: 1.0"><a href="<%= @Hours%>"  target="_blank">Please Click here For Information</a></td>
						<%else%>
							<td><%=@Hour%></td>
						<%end%>
					</tr>
					<tr>
						<th class="Caption">WHY WE LOVE <%= @Name %>:</th>
						<td style="line-height: 1.0"><%= @Comment %></td>
					</tr>
				</table>
			</div>
			<div class="urbanspoonLink">
				<hr/><a href="http://www.<%= @urbanspoonlink%>" target="_blank"><img src="/Image/Shared/urbanspoon.png" style="img-align:center"/></a>
			</div>
		</div>
		<div class="span-16">
			<span id="googleMap" style="display: block; margin-top:10px; height: 400px;"></span>
			<hr class="margin-top-10px"/>
			<div class="span-7">
				<div class="span-3">
					<img src="/Image/Shared/feature.jpg" height="100px" width="95%"/>
				</div>
				<div class="span-3">
					<h4 class="boldFont">FEATURE</h4>
					<p>featuring new restaruant just added to the VIPbite list? VIPbite TESTED AND AND APPROVED with a blog entry of your experience.</p>
				</div>
			</div>
			<div class="span-7">
				<div class="span-3">
					<img src="/Image/Shared/appstore.png" width="40%" height="30%"/>
					<img src="/Image/Shared/googleplay.png" width="40%" height="30%"/>
				</div>
				<div class="span-3">
					<h4 class="boldFont">GET THE APP</h4>
					<p>Find vipbite partner restaurant, flash the vipbite card when dining. The vipbite app is your passport to outstanding dining experience.</p>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(window).bind("ready", function() {
		var latitude = $("#latitude_hid").val();
		var longitude = $("#longitude_hid").val();

		InitWithLocation(latitude, longitude);
		$("#<%= @Name %>").corner();
	});

	function InitWithLocation(lat, lng)
	{
	    var mapProp = {
	        center:new google.maps.LatLng(lat,lng),
	        zoom:17,
	        mapTypeId:google.maps.MapTypeId.ROADMAP
	    };

	    map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

	    var latlong = new google.maps.LatLng(lat, lng);

	    var marker = new google.maps.Marker({
        title: "restaurantLocation",
        map: map,
        position: latlong
      });
	}

	!function(d,s,id){
	var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id))
		{js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}
	}(document, 'script', 'twitter-wjs');
</script>