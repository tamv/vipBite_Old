<div class="body-container">
	<div id="pageContent" class="container" style="margin-top: 40px">
		<section id="restaurantContainer" class="span-9">
			<div id="SearchContainer">
				<%= form_tag(controller: 'restaurant', action: 'searchRestaurant', method: "post") do %>
					<%= text_field_tag('SearchVal', nil || params[:SearchVal], maxlength: 30, placeholder: 'What are you in the mood for?', size: 40, style: "height: 23px;", :class=>"searchInput") %>
					<%= submit_tag('search', :class=>"userLoginButton clickable", style: "padding:7px; font-size: 11px;")%>
				<% end %>
			</div>
			<div id="searchResultContainer"  class="margin-top-10px">
				<% if(nil != @searchRestaurant) %>
					<% @searchRestaurant.each do |rest|%>
						<div itemscope itemtype="http://schema.org/Restaurant">
							<div itemprop="logo" class="span-2 margin-bottom-5px clickable">
								<%= link_to image_tag('/Image/restaurant_logo/' << rest.imageUrl, style:"width:100%; height:60px;"), {controller: 'restaurant', action: 'restaurantDetail', restaurant: rest.restaurantname}, :target => "_blank" %>
							</div>
							<div class="span-6 clickable margin-bottom-5px" onclick="showRestaurantLocation('<%=rest.restaurantname%>')">
								<h3 class="boldFont" itemprop="name"><%= rest.restaurantname %></h3>
								<p itemprop="telephone" class="boldFont" style="font-size: 9px;">phone: <%= rest.phone %></p>
								<p itemprop="servesCuisine" class="boldFont" style="font-size: 9px;">tags: <%= rest.tags %></p>
								<p itemprop="event" class="boldFont" style="font-size: 9px;"><%= getrestaurantSummary(rest.detailId) %>@</p>
								<p itemprop="address" style="font-size: 9px;"><%= [rest.address, rest.city, rest.province, rest.postal].join(", ")%></p>
								<input class="hid_location" id="<%=rest.restaurantname%>" type="hidden" value='{"name": "<%=rest.restaurantname%>", "latitude": <%=rest.latitude%>, "longitude": <%=rest.longitude%>}'/>
							</div>
						</div>
						<hr/>
					<% end %>
				<% end %>
			</div>
		</section>
		<div class="span-15" style="margin-bottom: 10px;">
			<span id="googleMap" class="searchMapStyle"></span>
			<hr class="margin-top-10px"/>
			<div class="span-7">
				<div class="span-3">
					<img src="/Image/Shared/feature.jpg" height="100px" width="95%"/>
				</div>
				<div class="span-3">
					<h4 class="boldFont">FEATURE</h4>
					<p>featuring new restaruant just added to the VIPbite list? VIPbite TESTED AND AND APPROVED with a blog entry of your experience.</p>
				</div>
			</div>
			<div class="span-7">
				<div class="span-3">
					<img src="/Image/Shared/yycPass.png" width="100%" height="60%"/>
					<img src="/Image/Shared/appstore.png" width="45%" height="30%"/>
					<img src="/Image/Shared/googleplay.png" width="45%" height="30%"/>
				</div>
				<div class="span-3">
					<h4 class="boldFont">GET THE APP</h4>
					<p>Find vipbite partner restaurant, flash the vipbite card when dining. The vipbite app is your passport to outstanding dining experience.</p>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(window).bind("ready", function() {
		initialize_withLoc();
	});

	function initialize_withLoc()
	{
		var mapProp = {
            center:new google.maps.LatLng(51.0500,-114.0667),
            zoom:15,
            mapTypeId:google.maps.MapTypeId.ROADMAP
        };

        map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

		$("input:hidden.hid_location").each( function(){
			var info = jQuery.parseJSON($(this).val());
			var latlong = new google.maps.LatLng(info.latitude, info.longitude);
			var marker = new google.maps.Marker({ title: info.name, map: map, position: latlong});
		});
	}

	function showRestaurantLocation(restname)
	{
		debugger;
		var info = jQuery.parseJSON($("#"+restname).val());
	    var latlong = new google.maps.LatLng(info.latitude, info.longitude);
	    var marker = new google.maps.Marker({ title: info.name, map: map, position: latlong});

		map.panTo(marker.position);
		map.setZoom(17);
	}
</script>