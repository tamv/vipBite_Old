<div class="body-container">
	<div id="pageContent" class="container" style="margin-top: 40px">
		<h1>MY ACCOUNT</h1>

		<div id="accountManager" class="span-12 push-1 colborder" style="position: relative;">
			<h2>Edit Email or Password</h2>
			<hr/>
			<%= form_tag(controller: 'account', action: 'userAccount', method:'post') do %>
				<table>
					<tr>
						<th><label>EMAIL:</label></th>
						<td><%= email_field_tag('email', @loginUserEmail || nil, maxlength: 30,:size => 30, :class => "registerinput") %></td>
					</tr>
					<tr>
						<th><label>PASSWORD:</label></th>
						<td><%= password_field_tag('password', nil, maxlength:20,:size => 30, :class => "registerinput") %></td>
					</tr>
				</table>
				<hr/>
				<div id="MembershipValidationDate" class="margin-bottom-10px">
					<label class="ExpdateFont">VIPbite MEMBERSHIP VALID UNTIL:</label>
					<% if(@loginUserExp <= Time.now) %>
						<label class="ExpdateFont" style="color:red"><%= @loginUserExp.year %>/<%= @loginUserExp.month %>/<%= @loginUserExp.day %></label>
					<% else %>
						<label class="ExpdateFont" style="color:green"><%= @loginUserExp.year %>/<%= @loginUserExp.month %>/<%= @loginUserExp.day %></label>
					<% end %>
				</div>
				<div class="last"><span style="float:right"><%= submit_tag('APPLY CHANGE', :class=>"renewMembershipButton clickable") %></span></div>
			<% end %>
		</div>
	</div>
</div>