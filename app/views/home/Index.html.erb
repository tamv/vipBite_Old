<div class="body-container">
	<div id="pageContent">
		<section id="TopContent" class="topContent">
			<img src="/Image/Shared/background.jpg" height="100%" width="100%">

			<div id="howitwork" class="howItWorkBox">
				<h1 class="headingFont margin-top-5px margin-left-5px">HOW IT WORKS</h1>

				<li><p class="boldFont margin-left-10px"> 1. Eat at one of many VIPbite partner restaurant</p></li>
				<li><p class="boldFont margin-left-10px"> 2. Save big by being a VIPbite member</p></li>
				<li><p class="boldFont margin-left-10px"> 3. Have some dessert, you've earn it</p></li>

				<div id="becomeVIPbiteMemberButton"class="clickable becomeMemberButton">
					<p>
						BECOME A MEMBER NOW 
						<img src="/Image/Shared/clickon.png" width="20px" height="20px" align="top" style="margin-left: 3px;"/>
					</p>
				</div>
			</div>
		</section>

		<section id="BottomContent" class="container" style="margin-top: 20px;">
			<div class="span-7 colborder">
				<h4 class="">GET THE APP</h4>

				<div class="span-3">
					<p>
						Find VIPbite restaurants, track your savings and flash the VIPbite pass when dining.
						The VIPbite App is your passport to outstanding dining experiences.
					</p>
				</div>
				<div class="span-4 last">
					<img src="/Image/Shared/appstore.png" width="100%"/>
        			<img src="/Image/Shared/googleplay.png" width="100%"/>
				</div>
				<div class="span-7">
        			<img src="/Image/Shared/getapplogo.png" width="100%" height="190px"/>
      			</div>
			</div>

			<div class="span-7 colborder">
				<h4 class="">PLACES TO SAVE</h4>

				<p class="margin-left-10px margin-bottom-20px">... and counting. Try somewhere new tonight.</p>
				<hr/>
				<table class="span-5" class="margin-auto">
					<% Restaurants.limit(5).each do |rests| %>
						<tr>
							<th style="margin-left: 20px;">
								<img src="/Image/Home/background.jpg" width="70px" height="30px" style="vertical-align:middle;"/>
							</th>
							<td>
								<text class="imageCaption"><%= rests.restaurantName %></text>
							</td>
						</tr>
					<%end%>
				</table>

				<a class="linkFont" href="/restaurant" style="float: right">click to see more</a>
			</div>

			<div class="span-8">
				<h4 class="">FOLLOW US</h4>
				<a class="twitter-timeline" width="310px" height ="320px" data-dnt="true" href="https://twitter.com/VIPbite"  data-widget-id="379467725816344576">Tweets by @VIPbite</a>
			</div>
		</section>
	</div>
</div>

<script>
  !function(d,s,id)
    {var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}
    (document,"script","twitter-wjs");
</script>